{% extends 'base.html.twig' %}
{% block global %}
    <section id="stats-counter" class="stats-counter">
        <div class="container" data-aos="zoom-out">
            <div class="row gy-4">
                <select name="cars" id="cars">
                    <option value="">Select an option</option>
                    <option value="The Wise">The Wise</option>
                    <option value="Saadana">Saadana</option>
                </select>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('cars').addEventListener('change', function() {
                var selectedOption = this.value;
                if (selectedOption === 'The Wise') {
                    window.location.href = '{{ path('app_comment_index') }}';
                } else if (selectedOption === 'Saadana') {
                    window.location.href = '{{ path('app_comment_saadana') }}';
                }
            });
        });
    </script>
{% endblock %}
