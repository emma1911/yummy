{% extends 'base.html.twig' %}

{% block title %}Fooditem index{% endblock %}

{% block body %}
    <h1>Fooditem index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Photo</th>
                <th>Price</th>
                <th>Description</th>
                <th>Type</th>
                <th>Name_food</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fooditem in fooditems %}
            <tr>
                <td>{{ fooditem.id }}</td>
                <td>{{ fooditem.photo }}</td>
                <td>{{ fooditem.price }}</td>
                <td>{{ fooditem.description }}</td>
                <td>{{ fooditem.type }}</td>
                <td>{{ fooditem.nameFood }}</td>
                <td>
                    <a href="{{ path('app_fooditem_show', {'id': fooditem.id}) }}">show</a>
                    <a href="{{ path('app_fooditem_edit', {'id': fooditem.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_fooditem_new') }}">Create new</a>
{% endblock %}
